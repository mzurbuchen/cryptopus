- if flash[:error]
  .alert.alert-danger
    = flash[:error]
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
      %span{"aria-hidden" => "true"} &#215;
- elsif flash[:notice]
  .alert.alert-info
    = flash[:notice]
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
      %span{"aria-hidden" => "true"} &#215;
- elsif flash[:alert]
  .alert.alert-warning
    = flash[:alert]
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", type: "button"}
      %span{"aria-hidden" => "true"} &#215;
- else
  .message_container{:id => 'message_container'}
