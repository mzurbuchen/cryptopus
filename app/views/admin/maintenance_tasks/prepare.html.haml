%h1= @maintenance_task.label
= form_tag :admin_maintenance_tasks_execute do
  - @maintenance_task.task_params.each do |p|
    - if p.first.second == 'ListRemovedLdapUsers'
      = render partial: 'list_removed_ldap_users'
    - else
      = create_maintenance_task_field(p)

  - if @maintenance_task.executable == true
    = submit_tag "execute", class: 'btn btn-primary'
  =link_to "Cancel", admin_maintenance_tasks_path, {:class=>"btn btn-primary"}
